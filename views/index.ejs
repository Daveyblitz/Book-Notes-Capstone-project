<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Book Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/main.css" rel="stylesheet">
  <style>
    #themeToggle {
      background: none;
      border: none;
      color: inherit;
      font-size: 1.5rem;
      cursor: pointer;
    }

    body {
      min-height: 100vh;
    }

   body.dark-mode a.navbar-brand {
    color: white;
   }

   body.light-mode a.btn-outline {
    color: black;
   }

   body.dark-mode a.btn-outline {
    color: white;
   }

    body.dark-mode button.btn.btn-outline.btn-sm {
      color: white;
      border-color: none;
    }

  </style>
  
</head>

<body class="light-mode">

  <!-- Theme Toggle Button -->
  

  <!-- Navbar -->
  <nav class="navbar px-3 w-100">
    <a class="navbar-brand" href="#">Book Notes</a>
    <input type="text" class="form-control w-50" placeholder="Search a user">
    <div class="ms-auto">
      <a href="./index.ejs" class="btn btn-outline btn-sm me-2">Home</a> 
          <a class="btn btn-outline btn-sm" href="/logout">Logout</a>
      <button class="" id="themeToggle">üåô</button>
    </div>
  </nav>

  <div class="container mt-5">
    <h2 class="mb-4">Books I've Read</h2>

    <% if (book_reviews && book_reviews.length > 0) { %>
      <% book_reviews.forEach(review => { %>
        <div class="card mb-4">
          <div class="row g-0">
            <div class="col-md-3"> 
              <% if (review.cover_id) { %>
                <img src="https://covers.openlibrary.org/b/id/<%=review.cover_id%>-M.jpg" alt="Book cover" class="img-fluid placeholder-img">
              <% } else { %>
                <img src="https://via.placeholder.com/200x250.png?text=No+Cover" alt="Placeholder cover" class="img-fluid placeholder-img">
              <% } %>
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title"><%= review.title || "Untitled" %></h5>
                <h6 class="card-subtitle mb-2">By <%= review.author || "Unknown" %></h6>
                
                <!-- Review text (view mode) -->
                <p class="card-text" id="reviewText<%= review.review_id %>"><%= review.review %></p>
                
                <!-- Review edit form (hidden by default) -->
                <form action="/edit" method="POST" class="edit-form" id="editForm<%= review.review_id %>" style="display: none;">
                  <input type="hidden" name="updatedReviewId" value="<%= review.review_id %>">
                  <div class="mb-2">
                    <textarea class="form-control" name="updatedReview" rows="3"><%= review.review %></textarea>
                  </div>
                  <div class="mb-2">
                    <label class="form-label">Rating:</label>
                    <input type="number" class="form-control" name="updatedRating" value="<%= review.rating %>" min="1" max="10" required>
                  </div>
                  <button type="submit" class="btn btn-success btn-sm">Save</button>
                  <button type="button" class="btn btn-secondary btn-sm" onclick="cancelEdit('<%= review.review_id %>')">Cancel</button>
                </form>
                
                <!-- Rating (view mode) -->
                <p class="rating" id="ratingText<%= review.review_id %>">Rating: <%= review.rating %> / 10</p>
                
                <div class="d-flex gap-2">
                  <button class="btn btn-outline-primary btn-sm" id="editBtn<%= review.review_id %>" onclick="showEditForm('<%= review.review_id %>')">Edit</button>
                  <form action="/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this review?');">
                    <input type="hidden" name="deleteReviewId" value="<%= review.review_id %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert-info alert">
        Welcome, <%= name %>! Add your book notes to get started.
      </div>
    <% } %>
    <form action="/add" method="GET">
      <button type="submit" class="btn btn-custom">Add Book Review +</button>
    </form>
  </div>

  <!-- Theme Toggle Script -->
  <script>
    const toggleBtn = document.getElementById('themeToggle');
    const body = document.body;

    toggleBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      body.classList.toggle('light-mode');
      toggleBtn.textContent = body.classList.contains('dark-mode') ? '‚òÄÔ∏è' : 'üåô';
    });

    // Edit and Delete functionality
    function showEditForm(reviewId) {
      // Hide the view mode elements
      document.getElementById('reviewText' + reviewId).style.display = 'none';
      document.getElementById('ratingText' + reviewId).style.display = 'none';
      document.getElementById('editBtn' + reviewId).style.display = 'none';
      
      // Show the edit form
      document.getElementById('editForm' + reviewId).style.display = 'block';
    }

    function cancelEdit(reviewId) {
      // Show the view mode elements
      document.getElementById('reviewText' + reviewId).style.display = 'block';
      document.getElementById('ratingText' + reviewId).style.display = 'block';
      document.getElementById('editBtn' + reviewId).style.display = 'inline-block';
      
      // Hide the edit form
      document.getElementById('editForm' + reviewId).style.display = 'none';
    }

  </script>
</body>
</html>
