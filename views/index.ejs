<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Book Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/main.css" rel="stylesheet">
  <style>
    #themeToggle {
      background: none;
      border: none;
      color: inherit;
      font-size: 1.5rem;
      cursor: pointer;
    }

    body {
      min-height: 100vh;
    }

   body.dark-mode a.navbar-brand {
    color: white;
   }

   body.light-mode a.btn-outline {
    color: black;
   }

   body.dark-mode a.btn-outline {
    color: white;
   }


  </style>
  
</head>

<body class="light-mode">

  <!-- Theme Toggle Button -->
  

  <!-- Navbar -->
  <nav class="navbar px-3 w-100">
    <a class="navbar-brand" href="#">Book Notes</a>
    <div class="ms-auto">
      <a href="/" class="btn btn-outline btn-sm me-2">Home</a>
      <a href="/logout" class="btn btn-outline btn-sm">Logout</a>
      <button class="" id="themeToggle">üåô</button>
    </div>
  </nav>

  <div class="container mt-5">
    <h2 class="mb-4">Books I've Read</h2>

    <% if (book_reviews && book_reviews.length > 0) { %>
      <% book_reviews.forEach(review => { %>
        <div class="card mb-4">
          <div class="row g-0">
            <div class="col-md-3">
              <% if (review.cover_id) { %>
                <img src="https://covers.openlibrary.org/b/id/<%=review.cover_idz%>-M.jpg" alt="Book cover" class="img-fluid placeholder-img">
              <% } else { %>
                <img src="https://via.placeholder.com/200x250.png?text=No+Cover" alt="Placeholder cover" class="img-fluid placeholder-img">
              <% } %>
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title"><%= review.title || "Untitled" %></h5>
                <h6 class="card-subtitle mb-2">By <%= review.author || "Unknown" %></h6>
                <p class="card-text"><%= review.review %></p>
                <p class="rating">Rating: <%= review.rating %> / 5</p>
                <div class="d-flex gap-2">
                  <a href="/books/<%= review.id %>/edit" class="btn btn-outline-light btn-sm">Edit</a>
                  <a href="/books/<%= review.id %>/delete" class="btn btn-outline-light btn-sm">Delete</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info">
        Welcome, <%= name %>! Add your book notes to get started.
      </div>
    <% } %>
  </div>

  <!-- Theme Toggle Script -->
  <script>
    const toggleBtn = document.getElementById('themeToggle');
    const body = document.body;

    toggleBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      body.classList.toggle('light-mode');
      toggleBtn.textContent = body.classList.contains('dark-mode') ? '‚òÄÔ∏è' : 'üåô';
    });
  </script>
</body>
</html>
