<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Book Notes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #e0e0e0;
      font-family: "Georgia", serif;
    }
    .navbar {
      background-color: #1f1f1f;
    }
    .card {
      background-color: #1e1e1e;
      border: 1px solid #333;
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .card-title {
      color: #f8f9fa;
    }
    .card-subtitle {
      color: #aaa;
    }
    .btn-outline-light {
      border-color: #888;
      color: #e0e0e0;
    }
    .btn-outline-light:hover {
      background-color: #444;
    }
    .rating {
      font-weight: bold;
      color: #ccc;
    }
    .placeholder-img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      background-color: #333;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-dark px-3">
    <a class="navbar-brand" href="#">Book Notes</a>
    <div>
      <a href="/" class="btn btn-outline-light btn-sm">Home</a>
      <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
    </div>
  </nav>

<div class="container mt-4">
  <h2 class="mb-4">Books I've Read</h2>

  <% books.forEach(book => { %>
    <div class="card">
      <div class="row g-0">
        <div class="col-md-3">
          <% if (book.cover) { %>
            <img src="<%= book.cover %>" alt="Book cover" class="img-fluid placeholder-img">
          <% } else { %>
            <img src="https://via.placeholder.com/200x250.png?text=No+Cover" alt="Placeholder cover" class="img-fluid placeholder-img">
          <% } %>
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <h6 class="card-subtitle mb-2">By <%= book.author %></h6>
            <p class="card-text"><%= book.review %></p>
            <p class="rating">Rating: <%= book.rating %> / 5</p>
            <div class="d-flex gap-2">
              <a href="/books/<%= book.title %>/edit" class="btn btn-outline-light btn-sm">Edit</a>
              <a href="/books/<%= book.title %>/delete" class="btn btn-outline-light btn-sm">Delete</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
</div>

</body>
</html>
